*@
@model List<Student>
<thead>
    <tr>
        <th>Adı Soyadı</th>
        <th>Bölüm</th>
        <th>Hobiler</th>
        <th>Sınıf Ögretmeni</th>
        <th>Rehber Öğretmeni</th>
        <th>İşlem</th>

    </tr>
</thead>
<tbody>
    @foreach (Student item in Model)
    {
        <tr>
            <td>@item.Fullname</td>
            <td>@item.Departman.Name</td>
            <td>
                @if (item.Hobbies != null)
                {
                    @foreach (Hobby hobby in item.Hobbies)
                    {
                        <div>@hobby.Name</div>
                    }
                }
                else
                {

                }
            </td>


            <td>@item.Teacher.Name</td>
            <td>@item.GuidanceCounselor.Name</td>
            <td>
                <button class="btn btn-primary pt-1 pb-1 mb-1">Detay</button>
                <button onclick="Delete(@item.Id)" type="button" class="btn btn-primary pt-1 pb-1 mb-1" data-bs-toggle="modal" data-bs-target="#modaldelete" student-name="@item.Fullname">Sil</button>
            </td>
        </tr>
    }

</tbody>